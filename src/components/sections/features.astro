---
import { Button } from "../../components/ui/button"; // Adjusted path
import { features } from "../../config/landing"; // Adjusted path
import { Icon } from "astro-icon/components"; 
import HeaderSection from "../../components/sections/header-section.astro"; // Adjusted path
---

<section>
  <div class="pb-6 pt-28">
    <div class="container max-w-6xl">
      <HeaderSection
        label="ATEAM $ATL"
        title="Everyone has one job: to support ATL on-chain."
        subtitle="The utility is that we accept ATEAM 🅰️TL tokens for Gen-Z marketing campaigns on our social media channels and in-house branded ad campaigns, offering affordable marketing solutions for all ATL businesses that want to have some fun."
      />

      <div class="mt-12 grid gap-3 sm:grid-cols-2 lg:grid-cols-3">
        {features.map((feature) => (
          <div class="group relative overflow-hidden rounded-2xl border bg-background p-5 md:p-8">
            <div
              aria-hidden="true"
              class="absolute inset-0 aspect-video -translate-y-1/2 rounded-full border bg-gradient-to-b from-purple-500/80 to-white opacity-25 blur-2xl duration-300 group-hover:-translate-y-1/4 dark:from-white dark:to-white dark:opacity-5 dark:group-hover:opacity-10"
            />
            <div class="relative">
              <div class="relative flex size-12 rounded-2xl border border-border shadow-sm *:relative *:m-auto *:size-6 ">
                <span>☔</span>
              </div>

              <p class="mt-6 pb-6 text-muted-foreground">
                {feature.description}
              </p>

              <div class="-mb-5 flex gap-3 border-t border-muted py-4 md:-mb-7">
                <Button
                  variant="secondary"
                  size="sm"
                  rounded="xl"
                  className="px-4"
                >
                  <a
                    href={feature.link} // Dynamically set the URL here
                    target="_blank"
                    rel="noreferrer"
                    class="flex items-center gap-2"
                  >
                    <span>Start Here</span>
                    <Icon name="lucide:arrow-up-right" class="size-4" />
                  </a>
                </Button>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
